<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :題名 %>
  <%= text_input f, :題名 %>
  <%= error_tag f, :題名 %>

  <%= label f, :本文 %>
  <%= textarea f, :本文 %>
  <%= error_tag f, :本文 %>

  <%= label f, :作成日 %>
  <%= date_select f, :作成日 %>
  <%= error_tag f, :作成日 %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
